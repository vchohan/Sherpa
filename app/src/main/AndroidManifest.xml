<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.delaware.data.sherpa">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/sherpa_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Sherpa.Launcher">

        <activity android:name=".SplashActivity">
        </activity>

        <activity
                android:name=".HomeActivity"
                android:label="@string/home_activity_title">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
                android:name=".advancedsearch.AdvancedSearch"
                android:label="Advanced Search Activity"
                android:theme="@style/Sherpa">
        </activity>

    </application>

</manifest>