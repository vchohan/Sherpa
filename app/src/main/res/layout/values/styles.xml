<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Sherpa" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/sherpaPrimary</item>
        <item name="colorPrimaryDark">@color/sherpaPrimaryDark</item>
        <item name="colorAccent">@color/sherpaAccent</item>
        <item name="android:colorBackground">@color/sherpaAccent</item>
    </style>

    <style name="Sherpa.ButtonBar">
        <item name="colorButtonNormal">@color/sherpaPrimaryDark</item>
        <item name="android:textColor">@color/sherpaPrimary</item>
    </style>

    <style name="Sherpa.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

</resources>
